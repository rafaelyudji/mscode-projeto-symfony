{% extends 'base.html.twig' %}

{% block title %}Login - MS Code{% endblock %}

{% block stylesheets %}
    <link href="/assets/css/styles.css" rel="stylesheet">
    <link href="{{ asset('styles/login.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="POST">
            <div class="d-flex align-items-center mb-4">
                <img class="p-0" src="{{ asset('images/logotipo.svg') }}" width="72" height="57">
                <h1 class="h3 fw-normal my-0 ms-2">MS Code - Estoque</h1>
            </div>

            <div class="form-floating">
                <input type="email" name="_username" value="{{ last_username }}" class="form-control" id="email" placeholder="name@example.com" required autofocus>
                <label for="email">Email</label>
            </div>
            <div class="form-floating">
                <input type="password" name="_password" class="form-control" id="senha" placeholder="Password" required>
                <label for="senha">Senha</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-primary w-100 py-2" type="submit">Acessar</button>

            <p class="mt-3">
                Não tem uma conta? <a href="{{ path('app_register') }}">Cadastre-se</a>
            </p>

            <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2024</p>
        </form>
    </main>
</body>
{% endblock %}

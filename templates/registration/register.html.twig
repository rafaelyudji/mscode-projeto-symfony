{% extends 'base.html.twig' %}

{% block title %}Cadastro - MS Code{% endblock %}

{% block stylesheets %}
    <link href="/assets/css/styles.css" rel="stylesheet">
    <link href="{{ asset('styles/register.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">
        <div class="d-flex align-items-center mb-4">
            <img class="p-0" src="{{ asset('images/logotipo.svg') }}" width="72" height="57">
            <h1 class="h3 fw-normal my-0 ms-2">Cadastro - MS Code</h1>
        </div>

        {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success">
                {{ app.session.flashBag.get('success')[0] }}
            </div>
        {% endif %}

        {{ form_start(registrationForm) }}
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Email' } }) }}
                <label for="{{ registrationForm.email.vars.id }}">Email</label>
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Senha' } }) }}
                <label for="{{ registrationForm.plainPassword.vars.id }}">Senha</label>
            </div>
            <button class="btn btn-bd-primary w-100 py-2" type="submit">Cadastrar</button>
        {{ form_end(registrationForm) }}

        <p class="mt-3">
            Já tem uma conta? <a href="{{ path('app_login') }}">Faça login</a>
        </p>

        <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2024</p>
    </main>
</body>
{% endblock %}
